<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.harbdm.urbanexplorer.presentation.ui.screens.about.AboutScreenFragment">

    <!-- >
    Had to wrap ComposeView into layout cause it can't measure itself properly without it
    <-->
    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.compose.ui.platform.ComposeView
            android:id="@+id/compose_info_block_with_tittle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:composableName="com.harbdm.urbanexplorer.presentation.ui.components.InfoBlockWithTittleKt.InfoBlockWithTittlePreview"/>
    </LinearLayout>
    <TextView
        android:id="@+id/features_tittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:text="@string/about_features_tittle"
        style="@style/MyTextAppearance.LabelLarge"
        app:layout_constraintTop_toBottomOf="@id/linear1"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="@string/about_features_tittle"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/features_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/features_tittle"
        app:layout_constraintStart_toStartOf="parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/about_features_item"
        tools:itemCount="3"
        />

    <TextView
        android:id="@+id/showcase_tittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:text="@string/about_showcase_tittle"
        style="@style/MyTextAppearance.LabelLarge"
        app:layout_constraintBottom_toTopOf="@id/button_row"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="@string/about_features_tittle"
        />

    <LinearLayout
        android:id="@+id/button_row"
        android:orientation="horizontal"
        android:paddingBottom="36.dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

    <com.google.android.material.button.MaterialButton
        android:id="@+id/show_snackbar"
        android:text="@string/about_button_snackbar"
        style="@style/MyTextAppearance.HeadlineSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backgroundTint="@color/gray"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/add_test_spot"
        android:text="@string/about_button_add_test_spot"
        style="@style/MyTextAppearance.HeadlineSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backgroundTint="@color/gray"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>