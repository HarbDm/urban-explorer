<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.UrbanExplorer.Dark" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/m3_theme_dark_primary</item>
        <item name="colorOnPrimary">@color/m3_theme_dark_onPrimary</item>
        <item name="colorPrimaryContainer">@color/m3_theme_dark_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/m3_theme_dark_onPrimaryContainer</item>
        <item name="colorSecondary">@color/m3_theme_dark_secondary</item>
        <item name="colorOnSecondary">@color/m3_theme_dark_onSecondary</item>
        <item name="colorSecondaryContainer">@color/m3_theme_dark_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/m3_theme_dark_onSecondaryContainer</item>
        <item name="colorTertiary">@color/m3_theme_dark_tertiary</item>
        <item name="colorOnTertiary">@color/m3_theme_dark_onTertiary</item>
        <item name="colorTertiaryContainer">@color/m3_theme_dark_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/m3_theme_dark_onTertiaryContainer</item>
        <item name="colorError">@color/m3_theme_dark_error</item>
        <item name="colorOnError">@color/m3_theme_dark_onError</item>
        <item name="colorErrorContainer">@color/m3_theme_dark_errorContainer</item>
        <item name="colorOnErrorContainer">@color/m3_theme_dark_onErrorContainer</item>

        <!-- Backgrounds and Surfaces -->
        <item name="android:colorBackground">@color/m3_theme_dark_background</item>
        <item name="colorOnBackground">@color/m3_theme_dark_onBackground</item>
        <item name="colorSurface">@color/m3_theme_dark_surface</item>
        <item name="colorOnSurface">@color/m3_theme_dark_onSurface</item>
        <item name="colorSurfaceVariant">@color/m3_theme_dark_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/m3_theme_dark_onSurfaceVariant</item>
        <item name="colorSurfaceInverse">@color/m3_theme_dark_inverseSurface</item>
        <item name="colorOnSurfaceInverse">@color/m3_theme_dark_inverseOnSurface</item>

        <!-- Other M3 Colors -->
        <item name="colorPrimaryInverse">@color/m3_theme_dark_inversePrimary</item>
        <item name="colorOutline">@color/m3_theme_dark_outline</item>
        <item name="colorOutlineVariant">@color/m3_theme_dark_outlineVariant</item>

        <!-- System UI -->
        <!-- For dark theme, status bar is dark with light icons -->
        <item name="android:statusBarColor">@color/m3_theme_dark_background</item>
        <item name="android:windowLightStatusBar" >false</item>
    </style>
</resources>