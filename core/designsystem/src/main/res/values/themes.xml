<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!--
    It should be just Theme.UrbanExplorer if you want app to auto pick theme.
    Added .light and .dark to force light theme
     -->
    <style name="Theme.UrbanExplorer.Light" parent="Theme.Material3.Light.NoActionBar">
        <!-- Main Palette -->
        <item name="colorPrimary">@color/m3_theme_light_primary</item>
        <item name="colorOnPrimary">@color/m3_theme_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/m3_theme_light_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/m3_theme_light_onPrimaryContainer</item>
        <item name="colorSecondary">@color/m3_theme_light_secondary</item>
        <item name="colorOnSecondary">@color/m3_theme_light_onSecondary</item>
        <item name="colorSecondaryContainer">@color/m3_theme_light_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/m3_theme_light_onSecondaryContainer</item>
        <item name="colorTertiary">@color/m3_theme_light_tertiary</item>
        <item name="colorOnTertiary">@color/m3_theme_light_onTertiary</item>
        <item name="colorTertiaryContainer">@color/m3_theme_light_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/m3_theme_light_onTertiaryContainer</item>
        <item name="colorError">@color/m3_theme_light_error</item>
        <item name="colorOnError">@color/m3_theme_light_onError</item>
        <item name="colorErrorContainer">@color/m3_theme_light_errorContainer</item>
        <item name="colorOnErrorContainer">@color/m3_theme_light_onErrorContainer</item>

        <!-- Backgrounds and Surfaces -->
        <item name="android:colorBackground">@color/m3_theme_light_background</item>
        <item name="colorOnBackground">@color/m3_theme_light_onBackground</item>
        <item name="colorSurface">@color/m3_theme_light_surface</item>
        <item name="colorOnSurface">@color/m3_theme_light_onSurface</item>
        <item name="colorSurfaceVariant">@color/m3_theme_light_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/m3_theme_light_onSurfaceVariant</item>
        <item name="colorSurfaceInverse">@color/m3_theme_light_inverseSurface</item>
        <item name="colorOnSurfaceInverse">@color/m3_theme_light_inverseOnSurface</item>

        <!-- Other M3 Colors -->
        <item name="colorPrimaryInverse">@color/m3_theme_light_inversePrimary</item>
        <item name="colorOutline">@color/m3_theme_light_outline</item>
        <item name="colorOutlineVariant">@color/m3_theme_light_outlineVariant</item>

        <!-- System UI -->
        <!-- For light theme, status bar is light with dark icons -->
        <item name="android:statusBarColor">@color/m3_theme_light_background</item>
        <item name="android:windowLightStatusBar" >true</item>
    </style>
</resources>